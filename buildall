#!/bin/sh

do_make () {
	./configure $*
	echo Paused...; read line
	make clean > /dev/null
	make -j8 all > /dev/null
}

mv config.h good-config.h

echo "Disable shell"
do_make --disable-shell --disable-dopipes

echo "Blocking shell"
do_make --disable-dopipes

echo "Non-blocking shell"
do_make

mv good-config.h config.h
